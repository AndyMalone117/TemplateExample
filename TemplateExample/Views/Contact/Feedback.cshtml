
@model IEnumerable<BayviewHouse.Models.ContactModel>

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Feedback View Page</h2>

<table class="table table-responsive table-bordered">
    <thead style="background-color:Highlight">
        <tr>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Booking Ref</th>
            <th>Topic</th>
            <th>Comments</th>
            <th>Would customer Stay Again?</th>
            <th>Would customer Recommend?</th>
            <th>Feedback Date</th>
        </tr>
    </thead>
</table>

@foreach (var i in Model)
{
    <td>@i.Name</td>
            <td>@i.Email</td>
            <td>@i.BookingRef</td>
            <td>@i.Topic</td>
            <td>@i.Comments</td>
            <td>@i.Stay</td>
            <td>@i.Recommend</td>
            <td>@i.Time</td>
}
@Html.ActionLink("Back to BayView Staff Page ", "Index", "Staff")




