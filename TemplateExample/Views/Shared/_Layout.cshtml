<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bayview House</title>
    <script src="" type="text/javascript"></script> 
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Styles.css")">
</head>
<body>
    <header>
        <nav>
            <ul class="topnav" id="myTopnav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Offers", "Index", "Offers")</li>
                <li>@Html.ActionLink("Booking", "Index", "Booking")</li>
                <li>@Html.ActionLink("Activities", "Index", "Activities")</li>
                <li>@Html.ActionLink("Location", "Index", "Location")</li>
                <li>@Html.ActionLink("Tours", "Index", "Tours")</li>
                <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                <li>@Html.ActionLink("FAQ", "Index", "Faq")</li>
                <li>@RenderPage("Login.cshtml")</li>
@*MW*@ 
                @*<li>@Html.ActionLink("Login", "Index","Login")</li>
                <li>@Html.ActionLink("Logout","Logout","Login")</li>*@
                </ul>
            </nav>
    </header>

        <main>
            @RenderBody()
        <div id="slideshow">
            <div class="gallery_item">
                <span class="gallery_text">@Html.ActionLink("Activities", "Index", "Activities")</span>
                <img class="gallery_img" src="images/city.jpg" alt="city" />
            </div>
            <div class="gallery_item">
                <span class="gallery_text">@Html.ActionLink("Booking", "Index", "Booking")</span>
                <img class="gallery_img" src="images/shower.jpg" alt="shower" />
            </div>
            <div class="gallery_item">
                <span class="gallery_text">@Html.ActionLink("Site Map", "Index", "Sitemap")</span>
                <img class="gallery_img" src="images/bed.jpg" alt="bed" />
            </div>
        </div>
        <footer>
            <p class="copyright">© Moore's Bayview House 2016</p>
        </footer>
    </main>
</body>
</html>