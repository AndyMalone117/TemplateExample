@model BayviewHouse.Models.Customer_Model

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="table">
    <h2>User Registration</h2>
    <h4>Please Add Your Details - All Fields Required</h4>
    @using (Html.BeginForm("Register", "Register", FormMethod.Post))
    {
        <span style="color:red">
            @Html.ValidationSummary()
        </span>
        <p>
            @Html.LabelFor(m => m.FirstName)<br />
            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Joe" })
        </p>
        <p>
            @Html.LabelFor(m => m.LastName)<br />
            @Html.TextBoxFor(m => m.LastName,new { placeholder = "Bloggs" })
        </p>
        <p>
            @Html.LabelFor(m => m.Email)<br />
            @Html.TextBoxFor(m => m.Email, new { placeholder = "joebloggs@gmail.ie" })
        </p>
        <p>
            @Html.LabelFor(m => m.Phone)<br />
            @Html.TextBoxFor(m => m.Phone, new { placeholder = "0871234567" })
        </p>

        <p>
            @Html.LabelFor(m => m.Password)<br />
            @Html.PasswordFor(m => m.Password, new { placeholder = "xxxx" })
        </p>
        <p>
            @Html.LabelFor(m => m.PasswordConfirm)<br />
            @Html.PasswordFor(m => m.PasswordConfirm, new { placeholder = "xxxx" })
        </p>
        <input id="Submit1" type="submit" value="Register" />

    }

</div>



